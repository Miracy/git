<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <EditText
        android:id="@+id/Edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Text1"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:text="长江路"></TextView>
        <TextView
            android:id="@+id/Text2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="距离200m"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Text3"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:text="湖南路"></TextView>

        <TextView
            android:id="@+id/Text4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="距离600m"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Text5"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:text="江阴路"></TextView>

        <TextView
            android:id="@+id/Text6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="距离800m"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="此处是时间滚轴"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您的地锁号为"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约"></Button>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用"></Button>
    </LinearLayout>
    <TextView
        android:id="@+id/zhuangtai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用状态"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您已使用多长时间"></TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消预约"></Button>
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用完毕"></Button>
    </LinearLayout>
</LinearLayout>
