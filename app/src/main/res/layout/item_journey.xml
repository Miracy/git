<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_journey_cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_journey_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:src="@drawable/time"/>
    <TextView
        android:id="@+id/tv_journey_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_journey_img"
        android:layout_alignBottom="@id/iv_journey_img"
        android:textColor="#000"
        android:text="2017-09-15"/>
        <TextView
            android:id="@+id/tv_journey_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_journey_img"
            android:layout_toRightOf="@id/tv_journey_time"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="19:38:34"/>
        <TextView
            android:id="@+id/tv_journey_tv"
            android:layout_below="@+id/iv_journey_img"
            android:layout_alignLeft="@+id/iv_journey_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="行程消费"/>
        <TextView
            android:id="@+id/tv_journey_money"
            android:layout_below="@+id/iv_journey_img"
            android:layout_toRightOf="@+id/tv_journey_tv"
            android:layout_alignBottom="@+id/tv_journey_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="¥0.0"
            android:textSize="22dp"
            android:textColor="#f4ea2a"/>
        <ImageView
            android:id="@+id/iv_journey_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right"/>
        <TextView
            android:id="@+id/tv_journey_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_journey_tv"
            android:layout_toLeftOf="@id/iv_journey_arrow"
            android:text="30163927"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号："
            android:layout_alignBottom="@+id/tv_journey_tv"
            android:layout_toLeftOf="@id/tv_journey_num"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>