<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zr.study.disuo_1.Activity.leftmenu.wallet.WalletDeposit"
    android:background="#e6e6e6">

<RelativeLayout
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="10dp"
    >
    <ImageView
            android:id="@+id/iv_deposit_img1"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:src="@drawable/yellow_deposit"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="押金99元"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_deposit_img1"/>
    <ImageView
        android:id="@+id/choose1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:src="@drawable/chose_yes"/>

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="10dp"
        >
    <ImageView
        android:id="@+id/iv_deposit_img2"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/yellow_deposit"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="押金199元"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_deposit_img2"/>
        <ImageView
            android:id="@+id/choose2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:src="@drawable/chose_yes"/>
    </RelativeLayout>
    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="支付"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:background="#f4ea2a"
        />









</LinearLayout>